{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "note": "Mapping of Capsules UI surfaces to semantic theme tokens for AI guidance and manual preset authoring. tokenIds reference entries in src/lib/theme/token-registry.ts.",
  "surfaces": [
    {
      "id": "app-shell",
      "description": "Global backdrop and default surfaces seen behind cards, rails, and dialogs.",
      "tokenIds": ["surface.app", "surface.muted", "surface.elevated", "surface.overlay", "surface.background-fx.purple", "surface.background-fx.indigo", "surface.background-fx.pink", "surface.background-fx.mist", "surface.background-fx.stars", "surface.background-fx.snow", "surface.background-fx.confetti", "surface.background-fx.scanlines"],
      "cssVars": ["--app-bg", "--surface-app", "--surface-muted", "--surface-elevated", "--surface-overlay", "--background-fx-purple", "--background-fx-indigo", "--background-fx-pink", "--background-fx-mist", "--background-fx-stars", "--background-fx-snow", "--background-fx-confetti", "--background-fx-scanlines"]
    },
    {
      "id": "cards-and-tiles",
      "description": "Feed cards, profile tiles, and general elevated panels.",
      "tokenIds": ["card.bg-1", "card.bg-2", "card.border", "card.shadow", "card.hover-bg-1", "card.hover-bg-2", "card.hover-border", "card.hover-shadow", "radius.card", "shadow.md", "shadow.lg"],
