    },
    {
      "id": "dock",
      "description": "Bottom dock, floating dock sheet, and dock buttons.",
      "tokenIds": ["dock.bg-1", "dock.bg-2", "dock.border", "dock.shadow", "dock.btn-bg-1", "dock.btn-bg-2", "dock.btn-border", "dock.btn-border-hover", "dock.active-shadow", "dock.active-glow", "dock.sheet-bg-1", "dock.sheet-bg-2", "dock.sheet-border", "dock.sheet-shadow"],
