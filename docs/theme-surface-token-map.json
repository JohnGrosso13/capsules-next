    },
    {
      "id": "header",
      "description": "Global navigation header, including launch CTA and glass treatment.",
      "tokenIds": ["glass.header.top", "glass.header.bottom", "brand.header.accent", "brand.header.primary", "brand.header.strong", "brand.header.shadow-color", "border.header.base", "border.header.launch", "surface.header.button-bg", "surface.header.button-hover-bg", "surface.header.button-active-bg", "shadow.header.base", "shadow.header.lg", "shadow.header.launch", "shadow.header.launch-hover"],
