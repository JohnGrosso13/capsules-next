      "tokenIds": ["layout.header-offset", "layout.page-gap", "layout.column-gap", "layout.desktop-bottom-padding", "layout.mobile-top-offset", "layout.mobile-bottom-offset", "layout.mobile-section-gap", "layout.mobile-page-gutter"],
