    {
      "id": "borders-and-rings",
      "description": "Neutral borders and focus rings for interactive elements.",
      "tokenIds": ["border.default", "border.strong", "ring.primary", "ring.offset"],
      "cssVars": ["--color-border", "--color-border-strong", "--ring-primary", "--ring-offset"]
    },
    {
      "id": "feedback",
