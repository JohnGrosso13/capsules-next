{
    "name": "capsules-next",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack --experimental-https --hostname 0.0.0.0",
        "build": "next build --turbopack",
        "start": "next start",
        "r2:cors": "node ./scripts/configure-r2-cors.mjs",
        "lint": "eslint",
        "db:migrate": "node ./scripts/migrate.mjs",
        "db:snapshot": "node ./scripts/build-schema-snapshot.mjs",
        "db:bootstrap": "node ./scripts/bootstrap-schema.mjs",
        "db:reset:chat": "node ./scripts/run-sql.mjs --file supabase/sql/truncate_chat_tables.sql",
        "db:prune-chat": "node ./scripts/prune-chat-history.mjs",
        "db:cleanup:reactions": "node ./scripts/run-sql.mjs --file supabase/sql/cleanup_invalid_reactions.sql",
        "db:grants:dev": "node ./scripts/grant-dev-privileges.mjs",
        "lint:fix": "eslint --fix .",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "check": "npm run lint && npm run typecheck",
        "format": "prettier --write .",
        "test": "vitest",
        "build:cloudflare": "open-next build --adapter cloudflare",
        "build:cf": "open-next build --adapter cloudflare",
        "clear:friend-cache": "node ./scripts/clear-friend-cache.mjs"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.684.0",
        "@aws-sdk/s3-request-presigner": "^3.684.0",
        "@clerk/nextjs": "^6.32.2",
        "@livekit/components-core": "^0.12.10",
        "@livekit/components-react": "^2.9.12",
        "@mux/mux-node": "^12.8.0",
        "@mux/mux-player-react": "^3.6.1",
        "@phosphor-icons/react": "^2.1.10",
        "@pinecone-database/pinecone": "^6.1.2",
        "@radix-ui/react-slot": "^1.1.1",
        "@supabase/functions-js": "^2.5.0",
        "@supabase/supabase-js": "^2.57.4",
        "@upstash/ratelimit": "^2.0.6",
        "@upstash/redis": "^1.30.2",
        "ably": "^1.2.50",
        "algoliasearch": "^5.39.0",
        "bcryptjs": "^2.4.3",
        "clsx": "^2.1.1",
        "embla-carousel": "^8.6.0",
        "embla-carousel-react": "^8.6.0",
        "jimp": "^0.22.10",
        "livekit-client": "^2.13.3",
        "livekit-server-sdk": "^2.13.2",
        "next": "15.5.3",
        "qrcode": "^1.5.4",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-resizable-panels": "^3.0.6",
        "tailwind-merge": "^2.4.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241018.0",
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "4.1.13",
        "@types/bcryptjs": "^2.4.2",
        "@types/node": "^22.0.0",
        "@types/qrcode": "^1.5.5",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.5.3",
        "eslint-plugin-unicorn": "^61.0.2",
        "eslint-plugin-unused-imports": "^4.0.0",
        "jsdom": "^27.0.0",
        "open-next": "^3.1.3",
        "pg": "^8.16.3",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "4.1.13",
        "typescript": "^5.9.0",
        "vitest": "^3.2.4",
        "wrangler": "^3.80.2"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "type": "module"
}
